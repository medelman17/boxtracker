{
  "name": "@boxtrack/shared",
  "version": "0.1.0",
  "private": true,
  "description": "Shared types, schemas, and constants for BoxTrack",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "typescript": "^5.8.0",
    "tsup": "^8.0.1",
    "vitest": "^4.0.16"
  }
}
